<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Datum"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="32dp" />

        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/first_before_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/second_before_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/third_before_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/fourth_after_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





        <Button
            android:id="@+id/btn_add_song_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add Song" />

        <View
            android:id="@+id/divider_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/first_before_sermon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/second_before_sermon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/third_before_sermon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <cz.apollon.worshipcounter.PartDayItem
            android:id="@+id/fourth_after_sermon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <Button
            android:id="@+id/btn_add_song_sermon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add Song" />

        <View
            android:id="@+id/divider_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btn_save_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save this day" />


        <Button
            android:id="@+id/btnSongPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Preview" />

        <Button
            android:id="@+id/btnSongBookPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SongBook Preview" />

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>