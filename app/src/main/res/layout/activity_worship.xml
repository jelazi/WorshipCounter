<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorshipActivity">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_day_woship"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Datum"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="32dp" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/first_before_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/second_before_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/third_before_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/fourth_after_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/divider_first"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/first_before_sermon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/second_before_sermon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/third_before_sermon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cz.apollon.worshipcounter.PartDayItem
                    android:id="@+id/fourth_after_sermon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_save_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uložit bohoslužbu" />


            </LinearLayout>
        </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>